@model CRM.DTOs.GorevEkleDTO
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Görev Ekle";
}

<link rel="stylesheet" href="~/css/dark-theme.css" />

<div class="container">
    <div class="card">
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }

        <h2>📝 Yeni Görev Ekle</h2>

        <form asp-action="Ekle" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>🏢 Müşteri</label>
                        <select asp-for="MusteriId" asp-items="ViewBag.Musteriler" class="form-control">
                            <option value="">-- Müşteri Seçin --</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>👤 Kişi</label>
                        <select asp-for="KisiId" asp-items="ViewBag.Kisiler" class="form-control" required>
                            <option value="">-- Kişi Seçin --</option>
                        </select>
                        <span asp-validation-for="KisiId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>👨‍💼 Sorumlu Kullanıcı</label>
                        <select asp-for="SorumluKullaniciId" asp-items="ViewBag.Kullanicilar" class="form-control">
                            <option value="">-- Kullanıcı Seçin --</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>📌 Durum</label>
                        <select asp-for="Durum" asp-items="ViewBag.Durumlar" class="form-control">
                            <option value="">-- Durum Seçin --</option>
                        </select>
                        <span asp-validation-for="Durum" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>📝 Açıklama</label>
                <textarea asp-for="Aciklama" class="form-control" rows="4" placeholder="Görev açıklamasını girin..."></textarea>
            </div>

            <div class="form-group">
                <label>📅 Son Tarih</label>
                <input asp-for="SonTarih" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    ✅ Görev Ekle
                </button>
                <a href="/Gorev/index" class="btn btn-secondary">
                    ❌ İptal
                </a>
            </div>
        </form>
    </div>
</div>